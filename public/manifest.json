{
    "name": "Hitomi Downloader extension",
    "description": "Download directly from the web!",
    "version": "1.3.0",
    "manifest_version": 3,
    "browser_specific_settings": {
        "gecko": {
            "id": "git@saebasol.org"
        }
    },
    "action": {
        "default_popup": "index.html"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "permissions": [
        "tabs",
        "cookies"
    ]
}
