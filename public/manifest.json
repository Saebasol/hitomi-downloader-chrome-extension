{
    "name": "Hitomi Downloader extension",
    "description": "Download directly from the web!",
    "version": "1.2.1",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "permissions": [
        "tabs",
        "cookies"
    ]
}